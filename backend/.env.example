# Backend Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-64-character-secret-key-here-change-in-production

# Frontend URL Configuration (for CORS)
# Dev Environment: https://optio-dev-frontend.onrender.com
# Production: https://www.optioeducation.com
FRONTEND_URL=https://optio-dev-frontend.onrender.com
ALLOWED_ORIGINS=https://optio-dev-frontend.onrender.com,https://www.optioeducation.com

# Supabase Configuration
SUPABASE_URL=https://vvfgxcykxjybtvpfzwyx.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-key-here

# AI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# LMS Integration Configuration
# Canvas LMS
CANVAS_CLIENT_ID=your-canvas-client-id
CANVAS_PLATFORM_URL=https://your-institution.instructure.com

# Google Classroom
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Schoology
SCHOOLOGY_CLIENT_ID=your-schoology-client-id
SCHOOLOGY_CLIENT_SECRET=your-schoology-client-secret

# Moodle
MOODLE_URL=https://your-moodle-instance.com
MOODLE_CLIENT_ID=your-moodle-client-id

# LMS Feature Flags
ENABLE_LMS_SYNC=true
ENABLE_GRADE_PASSBACK=true

# Email Configuration (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SENDER_EMAIL=support@optioeducation.com
SENDER_NAME=Optio

# Rate Limiting Control (set to 'true' to disable for testing)
DISABLE_RATE_LIMIT=false

# Test Mode (NEVER use in production!)
TEST_MODE=false

# Cron Secret for AI orchestration
CRON_SECRET=your-cron-secret-key