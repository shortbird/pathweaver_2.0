# Backend Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-64-character-secret-key-here-change-in-production

# Frontend URL Configuration (for CORS)
# Dev Environment: https://optio-dev-frontend.onrender.com
# Production: https://www.optioeducation.com
FRONTEND_URL=https://optio-dev-frontend.onrender.com
ALLOWED_ORIGINS=https://optio-dev-frontend.onrender.com,https://www.optioeducation.com

# Supabase Configuration
SUPABASE_URL=https://vvfgxcykxjybtvpfzwyx.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-key-here

# AI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# Stripe Configuration (use test keys for dev, live keys for production)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs for subscription tiers
STRIPE_SUPPORTED_MONTHLY_PRICE_ID=price_supported_monthly_id
STRIPE_ACADEMY_MONTHLY_PRICE_ID=price_academy_monthly_id
STRIPE_SUPPORTED_YEARLY_PRICE_ID=price_supported_yearly_id
STRIPE_ACADEMY_YEARLY_PRICE_ID=price_academy_yearly_id

# Legacy compatibility
STRIPE_SUPPORTED_PRICE_ID=price_supported_monthly_id
STRIPE_ACADEMY_PRICE_ID=price_academy_monthly_id

# Email Configuration (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SENDER_EMAIL=support@optioeducation.com
SENDER_NAME=Optio

# Rate Limiting Control (set to 'true' to disable for testing)
DISABLE_RATE_LIMIT=false

# Test Mode (NEVER use in production!)
TEST_MODE=false

# Cron Secret for AI orchestration
CRON_SECRET=your-cron-secret-key