# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here-change-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# OpenAI Configuration (for AI quest generation)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4

# Google Gemini Configuration (alternative AI provider)
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-pro

# Stripe Configuration (for subscriptions)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_MONTHLY=price_monthly_id
STRIPE_PRICE_ID_YEARLY=price_yearly_id

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per hour

# Redis URL (optional, for distributed rate limiting)
# REDIS_URL=redis://localhost:6379

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Logging
LOG_LEVEL=INFO

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760

# Database URL (optional, for direct database connections)
# DATABASE_URL=postgresql://user:password@host:port/database